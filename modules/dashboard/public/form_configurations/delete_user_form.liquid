---
name: delete_user_form
resource: User
resource_owner: anyone
redirect_to: "/dashboard/users"
flash_notice: "You've successfully deleted user"
fields:
  deleted_at:
    validation:
      presence: true
default_payload: |-
  {%- assign time_now = 'now' | date: "%d-%m-%Y %H:%M:%S" -%}
  {"deleted_at": "{{ time_now }}"}
---
{% form %}
  <input type="Submit" class='btn btn-link' value="Delete" data-confirmation='You will delete this user permanently. Are you sure?'>
{% endform %}
