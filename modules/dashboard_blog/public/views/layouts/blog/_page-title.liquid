{%- capture meta_title %}{%- yield 'meta_title' -%}{%- endcapture -%}

{%- assign title_separator = '|' -%}
{%- assign project_name = 'Blog' -%}

{%- if meta_title.size > 0 -%}
  {%- capture title -%}{{ meta_title }} {{ title_separator }} {{ project_name }}{%- endcapture -%}
{%- else -%}
  {%- capture title -%}{{ project_name }}{%- endcapture -%}
{%- endif -%}

<title>{{ title }}</title>
