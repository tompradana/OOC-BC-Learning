---
name: edit_profile_form
resource: User
redirect_to: "/edit-profile"
flash_notice: "You've successfully edited your profile"
fields:
  email:
    validation:
      presence: true
  first_name:
    validation:
      presence: true
  last_name:
    validation:
      presence: true
default_payload: ''
---
{% form html-novalidate: false, html-class: 'container', html-data-lawyer-signup-form:true %}
  {% include 'modules/utils/utils' %}
  {% include forms_errors %}

  {% include input with f.first_name, type: "text" %}
  {% include input with f.last_name, type: "text" %}
  {% include input with f.email, type: 'email' %}

  {% include submit_tag with "Save", class: "btn btn-primary btn-lg" %}

{% endform %}
